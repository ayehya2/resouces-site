{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Resource",
  "description": "Schema for a resource entry in the Resources Wiki Site",
  "type": "object",
  "required": [
    "id",
    "title",
    "shortDescription",
    "longDescription",
    "links",
    "categories",
    "tags",
    "dateAdded",
    "status"
  ],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier for the resource (kebab-case)",
      "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$"
    },
    "title": {
      "type": "string",
      "description": "Display name of the resource",
      "minLength": 1,
      "maxLength": 100
    },
    "shortDescription": {
      "type": "string",
      "description": "Brief one-liner description (shown by default)",
      "minLength": 10,
      "maxLength": 150
    },
    "longDescription": {
      "type": "string",
      "description": "Detailed explanation with technical details (shown when expanded)",
      "minLength": 50,
      "maxLength": 2000
    },
    "links": {
      "type": "array",
      "description": "Array of hyperlinks to various platforms and documentation",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["type", "url", "label"],
        "properties": {
          "type": {
            "type": "string",
            "enum": [
              "website",
              "github",
              "documentation",
              "download",
              "api",
              "demo",
              "tutorial",
              "video",
              "article",
              "other"
            ]
          },
          "url": {
            "type": "string",
            "format": "uri",
            "pattern": "^https?://"
          },
          "label": {
            "type": "string",
            "minLength": 1,
            "maxLength": 50
          }
        }
      }
    },
    "categories": {
      "type": "array",
      "description": "Categories this resource belongs to (supports multiple)",
      "minItems": 1,
      "items": {
        "type": "string",
        "enum": [
          "artificial-intelligence",
          "cybersecurity",
          "hacking-tools",
          "digital-forensics",
          "privacy-anonymity",
          "networking",
          "web-development",
          "databases",
          "operating-systems",
          "linux",
          "programming-languages",
          "algorithms-data-structures",
          "apis",
          "datasets",
          "mathematics",
          "certifications",
          "github-repositories",
          "software",
          "useful-websites",
          "youtube-channels",
          "domains",
          "nas-backup",
          "monitoring",
          "security",
          "ethical-hacking",
          "miscellaneous"
        ]
      },
      "uniqueItems": true
    },
    "tags": {
      "type": "array",
      "description": "Descriptive tags for filtering",
      "items": {
        "type": "string",
        "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$"
      },
      "uniqueItems": true
    },
    "verified": {
      "type": "boolean",
      "description": "Whether the resource has been manually verified",
      "default": false
    },
    "featured": {
      "type": "boolean",
      "description": "Whether to feature this resource prominently",
      "default": false
    },
    "dateAdded": {
      "type": "string",
      "description": "ISO 8601 timestamp of when the resource was added",
      "format": "date-time"
    },
    "lastChecked": {
      "type": "string",
      "description": "ISO 8601 timestamp of last link status check",
      "format": "date-time"
    },
    "status": {
      "type": "string",
      "description": "Current status of the resource",
      "enum": ["active", "deprecated", "broken", "under-review", "archived"],
      "default": "active"
    },
    "community": {
      "type": "object",
      "description": "Community-driven metrics",
      "properties": {
        "upvotes": {
          "type": "integer",
          "minimum": 0,
          "default": 0
        },
        "downvotes": {
          "type": "integer",
          "minimum": 0,
          "default": 0
        },
        "workingCount": {
          "type": "integer",
          "minimum": 0,
          "default": 0,
          "description": "Number of users who reported this as working"
        },
        "brokenCount": {
          "type": "integer",
          "minimum": 0,
          "default": 0,
          "description": "Number of users who reported this as broken"
        },
        "scamReports": {
          "type": "integer",
          "minimum": 0,
          "default": 0,
          "description": "Number of scam/spam reports"
        }
      }
    },
    "metadata": {
      "type": "object",
      "description": "Additional metadata about the resource",
      "properties": {
        "platform": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["web", "desktop", "mobile", "browser", "cli", "api", "cloud"]
          }
        },
        "license": {
          "type": "string",
          "description": "Software license"
        },
        "pricing": {
          "type": "string",
          "enum": ["free", "freemium", "paid", "open-source", "subscription"]
        },
        "language": {
          "type": "string",
          "description": "Primary language(s) supported"
        },
        "requiresSignup": {
          "type": "boolean",
          "description": "Whether user registration is required"
        },
        "openSource": {
          "type": "boolean",
          "description": "Whether the project is open-source"
        },
        "selfHostable": {
          "type": "boolean",
          "description": "Whether it can be self-hosted"
        }
      }
    }
  }
}
